<% @snips.each do |snip| %>
<section class="snip">
	<h2 id="<%= snip.id %>"><%= snip.name %></h2>		
		<h5>code snippets</h5>
		<% @snip.snippets.each do |snippet| %>
			<article class="snippet">
				<a href="#"><%= snippet.name %></a>
				<p>video...</p>
			</article>				
		<% end %>
	<%= form_for @snippet do |f| %>
		<%= f.hidden_field :snip_id, :value => snip.id %>
	  <%= f.text_field :description %>
	  <%= f.submit %>
	<% end %>
	<%= link_to 'Show', snip %>
  <%= link_to 'Edit', edit_snip_path(snip) %>
  <%= link_to 'Destroy', snip, :confirm => 'Are you sure?', :method => :delete %>				
</section> 
<% end %>
