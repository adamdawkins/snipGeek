<% @snips.each do |snip| %>
<section class="snip">
	<h2 id="<%= snip.id %>"><%= snip.name %></h2>		
		<h5>code snippets</h5>
		<% snip.snippets.each do |snippet| %>
			<%= snippet.content %>				
		<% end %>
		<% form_for snip do |snip| %>
		  <% snip.fields_for :snippet do |snippet| %>
		    <%= snippet.text_field :description %>
		  	<%= snippet.submit %>
			<% end %>
		<% end %>	
</section> 
<% end %>
